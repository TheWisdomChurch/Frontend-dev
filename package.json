{
  "name": "wisdomhousehq-webapplication",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 2000",
    "lint": "eslint . --max-warnings 0 --no-warn-ignored",
    "lint:fix": "eslint . --fix --max-warnings 0 --no-warn-ignored",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "validate": "npm run type-check && npm run lint && npm run prettier",
    "prepare": "node -e \"const fs = require('fs'); if (fs.existsSync('.githooks/setup-hooks')) require('child_process').execSync('chmod +x .githooks/setup-hooks && ./.githooks/setup-hooks', { stdio: 'inherit' })\"",
    "postinstall": "npm run hooks:setup || echo 'Note: Run npm run hooks:setup to configure Git hooks'",
    "hooks:setup": "./.githooks/setup-hooks || (echo 'Making setup executable...' && chmod +x .githooks/setup-hooks && ./.githooks/setup-hooks)",
    "hooks:test": "echo 'Creating test commit...' && touch .hook-test && git add .hook-test && git commit -m 'Testing git hooks' && rm .hook-test || echo 'Commit failed (hooks working!)'",
    "hooks:dry-run": "./.githooks/pre-commit",
    "hooks:dry-run:commit": "./.githooks/pre-commit",
    "hooks:dry-run:push": "./.githooks/pre-push",
    "ci:validate": "npm run type-check && npm run lint && npm run build",
    "docker:dev": "docker-compose up app-dev",
    "docker:prod": "docker-compose up app-prod",
    "docker:build": "docker build -t wisdom-house .",
    "docker:build:dev": "docker build -t wisdom-house-dev -f Dockerfile.dev .",
    "docker:run": "docker run -p 3000:3000 wisdom-house",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/app -v /app/node_modules -v /app/.next -e NODE_ENV=development wisdom-house-dev",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "^16.0.6",
    "@radix-ui/react-dialog": "^1.1.15",
    "@react-spring/three": "^10.0.3",
    "@reduxjs/toolkit": "^2.10.1",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@types/gsap": "^1.20.2",
    "@vercel/analytics": "^1.6.1",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "googleapis": "^167.0.0",
    "gsap": "^3.13.0",
    "lucide-react": "^0.556.0",
    "next": "^15.5.7",
    "next-pwa": "^5.6.0",
    "next-seo": "^7.1.0",
    "next-sitemap": "^4.2.3",
    "qr-code-styling": "^1.9.2",
    "react": "^19.2.1",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.69.0",
    "react-hot-toast": "^2.6.0",
    "react-qr-code": "^2.0.18",
    "react-redux": "^9.2.0",
    "react-toastify": "^11.0.5",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.181.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "eslint-config-next": "^16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^15.15.0",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sass": "^1.97.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "node ./node_modules/prettier/bin/prettier.cjs --write",
      "node ./node_modules/eslint/bin/eslint.js --fix --max-warnings 0 --no-warn-ignored"
    ],
    "*.{json,md,mdx,css,scss,html,yml,yaml}": [
      "node ./node_modules/prettier/bin/prettier.cjs --write"
    ]
  }
}
